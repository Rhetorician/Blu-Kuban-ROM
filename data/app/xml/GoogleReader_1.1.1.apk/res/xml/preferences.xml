<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/preference_category_view">
        <CheckBoxPreference android:title="@string/preference_volume_key_navigation_title" android:key="volume_key_navigation" android:summary="@string/preference_volume_key_navigation_summary" android:defaultValue="false" />
        <CheckBoxPreference android:title="@string/preference_plugins_enabled_title" android:key="plugins_enabled" android:summary="@string/preference_plugins_enabled_summary" android:defaultValue="false" />
        <ListPreference android:entries="@array/text_size_labels" android:title="@string/preference_text_size_title" android:key="text_size" android:summary="@string/preference_text_size_summary" android:defaultValue="NORMAL" android:entryValues="@array/text_size_keys" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/preference_category_network">
        <CheckBoxPreference android:persistent="false" android:title="@string/preference_sync_title" android:key="sync" android:summary="@string/preference_sync_summary" android:defaultValue="false" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/preference_category_misc">
        <CheckBoxPreference android:title="@string/preference_confirm_mark_as_read_title" android:key="confirm-mark-as-read" android:summary="@string/preference_confirm_mark_as_read_summary" />
        <CheckBoxPreference android:title="@string/preference_custom_favicons_enabled_title" android:key="custom-favicons-enabled" android:summary="@string/preference_custom_favicons_enabled_summary" />
    </PreferenceCategory>
</PreferenceScreen>
