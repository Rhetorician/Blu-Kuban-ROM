<html>
  <head>
    <style type="text/css">
      body      { background-color: black; }
      a:hover   { text-decoration: none; }
      a:link    { color: #155496; }
      a:visited { color: #155496; }
      #bg {
        position: fixed;
        margin: 0px;
        border: 0px;
        padding: 0px;
        left: 0px;
        top: 0px;
        width: 100%;
        height: 100%;
        overflow: hidden;
        z-index: 0;
      }
      .main {
        position: absolute;
        left: 0%;
        top: 0%;
        width: 100%;
        height: 100%;
        padding: 0%;
        z-index: 10;
      }
    </style>
  </head>
  <body>
    <div id="bg">
      <table height="100%" width="100%" border="0" cellpadding="0"
        cellspacing="0">
        <tr>
          <td valign="middle">
            <img id="background" width="100%" />
          </td>
        </tr>
      </table>
    </div>
    <div class="main">
      <table height="100%" width="100%">
        <tr>
          <td align="center" valign="middle" height="100%">
            <a id="url" target="_top">
              <img src="/android_res/drawable/play"  style="border:0px;max-width:30%;max-height:auto;" />
            </a>
          </td>
        </tr>
      </table>
    </div>
    <div class="main">
      <table height="100%" width="100%">
        <tr>
          <td valign="bottom" align="right">
            <img id="logo" src="/android_res/drawable/youtube"  style="opacity:.7;max-width:40%;max-height:auto;" />
          </td>
        </tr>
      </table>
    </div>
    <script type="text/javascript">
      var videoId = document.location.hash.slice(1);
      var background = document.getElementById("background");
      var url = document.getElementById("url");
      background.src = "http://img.youtube.com/vi/"  + videoId + "/0.jpg";
      url.href = "vnd.youtube:" + videoId;
  </script>
  </body>
</html>
