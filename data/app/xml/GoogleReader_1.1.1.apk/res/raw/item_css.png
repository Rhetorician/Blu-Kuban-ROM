* {
  -webkit-user-select: none;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}

body {
  margin: 0px;
  padding: 0px;
  font-size: 18px;
  background: black;
}

#item {
  padding: 3% 5% 5% 5%;
  margin: 0px;
  background: black;
}

#title {
  font-weight: bold;
  padding-bottom: 4px;
  border-bottom: thin solid #155496;
}

#title a {
  color: #ebebeb;
  text-decoration: none;
}

#subtitle {
  color: #c0c0c0;
  margin-top: 4px;
  margin-bottom: 6px;
}

#subtitle a {
  color: #155496;
  text-decoration: none;
}

#liked {
  color: #c0c0c0;
  margin: 2px;
}

#liked img {
  width: 20px;
  height: 20px;
  vertical-align: middle;
}

#shared {
  color: #c0c0c0;
  margin: 2px;
}

#shared img {
  width: 24px;
  height: 24px;
  vertical-align: middle;
}

#annotation {
  color: #c0c0c0;
  margin-top: 2px;
  margin-bottom: 2px;
  margin-right: 2px;
  margin-left: 14px;
  font-size: 16px;
  font-style: italic;
}

#content {
  color: white;
}

#content a {
  color: #155496;
}

#content blockquote {
  margin-left: 10px;
  margin-right: 10px;
  padding-left: 10px;
  border-left: thin solid #CCC;
}

#content img {
  max-width: 100%;
  height: auto;
}

#content video, #content iframe, #content embed {
  max-width: 100%;
}

#enclosures {
}

#enclosures ul {
  list-style: none;
  padding-left: 4px;
}

#enclosures li {
  line-height: 36px;
  background-repeat: no-repeat;
  background-position: left center;
  padding-left: 48px;
}

#enclosures li a {
  color: #155496;
  text-decoration: none;
}

#enclosures li.image {
  background-image: url(/android_res/drawable/enclosure_image);
}

#enclosures li.audio {
  background-image: url(/android_res/drawable/enclosure_audio);
}

#enclosures li.video {
  background-image: url(/android_res/drawable/enclosure_video);
}

#enclosures li.other {
  background-image: url(/android_res/drawable/enclosure_other);
}
