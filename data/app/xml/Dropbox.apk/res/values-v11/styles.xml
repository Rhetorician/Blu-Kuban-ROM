<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Dialog" parent="@android:style/Theme.Holo.Dialog" />
    <style name="Theme" parent="@android:style/Theme.Holo" />
    <style name="Theme.Light" parent="@android:style/Theme.Holo" />
    <style name="Theme.NoTitleBar" parent="@android:style/Theme.Holo">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>
    <style name="Theme.AlwaysDark.NoTitleBar" parent="@android:style/Theme.Holo.NoActionBar" />
    <style name="Theme.NoTitleBar.Fullscreen" parent="@android:style/Theme.Holo.NoActionBar.Fullscreen" />
    <style name="Theme.AlwaysDark.NoTitleBar.Fullscreen" parent="@android:style/Theme.Holo.NoActionBar.Fullscreen" />
    <style name="Theme.Translucent.NoTitleBar" parent="@style/Theme.NoTitleBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
    <style name="Theme.Holo.Light.WhiteActionBar" parent="@android:style/Theme.Holo">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarStyle">@style/dropboxActionBarStyle</item>
        <item name="android:actionDropDownStyle">@style/dropboxActionBarTabTextStyle</item>
        <item name="android:actionButtonStyle">@style/dropboxActionBarTabTextStyle</item>
        <item name="android:actionBarTabStyle">@style/dropboxActionBarTabStyle</item>
        <item name="android:actionBarTabBarStyle">@style/dropboxActionBarTabBarStyle</item>
        <item name="android:actionBarTabTextStyle">@style/dropboxActionBarTabTextStyle</item>
        <item name="android:actionOverflowButtonStyle">@style/Widget.Holo.Light.ActionButton.Overflow</item>
    </style>
    <style name="dropboxActionBarStyle" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:progressBarStyle">@style/Widget.Holo.Light.ProgressBar.Horizontal</item>
        <item name="android:background">@drawable/actionbar_bg</item>
    </style>
    <style name="Widget.Holo.Light.ActionButton.Overflow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_moreoverflow_normal_holo_light</item>
    </style>
    <style name="Widget.Holo.Light.ProgressBar.Horizontal" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_holo_light</item>
    </style>
    <style name="dropboxActionBarTabStyle" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/new_tab</item>
        <item name="android:paddingLeft">@dimen/actionBarTabPadding</item>
        <item name="android:paddingRight">@dimen/actionBarTabPadding</item>
    </style>
    <style name="dropboxActionBarTabBarStyle" parent="@android:style/Widget.Holo.ActionBar.TabBar" />
    <style name="dropboxActionBarTabTextStyle" parent="@android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/tab_text_foreground</item>
        <item name="android:paddingLeft">2.0dip</item>
        <item name="android:paddingRight">2.0dip</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
