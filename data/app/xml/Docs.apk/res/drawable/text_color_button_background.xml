<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item android:left="1.0dip" android:right="1.0dip">
                <shape>
                    <stroke android:width="3.0dip" android:color="@android:color/white" />
                </shape>
            </item>
            <item android:bottom="3.0dip">
                <shape>
                    <solid android:color="@android:color/black" />
                </shape>
            </item>
            <item android:top="5.0dip" android:bottom="5.0dip">
                <bitmap android:gravity="center" android:src="@drawable/action_text_colour" />
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:left="1.0dip" android:right="1.0dip">
                <shape>
                    <stroke android:width="1.0dip" android:color="@color/divider_on_black" />
                </shape>
            </item>
            <item android:bottom="1.0dip">
                <shape>
                    <solid android:color="@android:color/black" />
                </shape>
            </item>
            <item android:top="5.0dip" android:bottom="5.0dip">
                <bitmap android:gravity="center" android:src="@drawable/action_text_colour" />
            </item>
        </layer-list>
    </item>
</selector>
