<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RadioGroup android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <RadioButton android:id="@id/hybrid_mode" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/hybrid_mode" />
        <RadioButton android:id="@id/cdma_only_mode" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/cdma_only_mode" />
        <RadioButton android:id="@id/evdo_only_mode" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/evdo_only_mode" />
    </RadioGroup>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <Button android:id="@id/ok_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ok_button" />
        <Button android:id="@id/cancel_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/cancel_button" />
    </LinearLayout>
</LinearLayout>
