<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <com.sec.android.app.myfiles.fileselector.views.MXBaseView android:orientation="vertical" android:id="@id/mxview" android:layout_width="fill_parent" android:layout_height="@dimen/selector_mxview_height"
      xmlns:android="http://schemas.android.com/apk/res/android">
        <com.sec.android.app.myfiles.fileselector.views.MXBaseToolBar android:id="@id/mx_toolbar" android:layout_width="fill_parent" android:layout_height="wrap_content" />
        <com.sec.android.app.myfiles.fileselector.views.MXBaseTitleBar android:id="@id/mx_titlebar" android:background="@drawable/ms_subtitle_bg" android:layout_width="fill_parent" android:layout_height="@dimen/selector_titlebar_height" />
        <com.sec.android.app.myfiles.fileselector.views.MXBaseContentFrame android:id="@id/mx_contentframe" android:layout_width="fill_parent" android:layout_height="fill_parent">
