<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:id="@id/select_all_container" android:background="@drawable/delete_selector_header" android:focusable="true" android:visibility="gone" style="@style/SelectLinearLayoutStyle">
        <TextView android:id="@id/select_all" android:text="@string/select_all" style="@style/SelectTextStyle_1" />
        <CheckBox android:id="@id/select_all_checkbox" style="@style/SelectCheckboxStyle" />
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@id/background_container" android:background="@drawable/task_bg2" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <LinearLayout android:id="@id/done_task_container" android:background="@drawable/done_task_selector_header" android:visibility="gone" style="@style/SelectLinearLayoutStyle">
            <FrameLayout android:duplicateParentState="true" android:layout_width="fill_parent" android:layout_height="fill_parent">
                <ImageView android:id="@id/bg_top_effect" android:background="@drawable/task_bg_01" android:layout_width="fill_parent" android:layout_height="wrap_content" />
                <LinearLayout android:gravity="center" android:orientation="horizontal" android:duplicateParentState="true" android:layout_width="fill_parent" android:layout_height="fill_parent">
                    <TextView android:id="@id/done_task" android:text="@string/done_task" style="@style/SelectTextStyle_2" />
                    <CheckBox android:id="@id/done_task_checkbox" style="@style/SelectCheckboxStyle" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
        <LinearLayout android:background="@color/seperator_custom" android:layout_width="fill_parent" android:layout_height="1.0px" />
        <FrameLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1.0">
            <ListView android:id="@id/list" android:layout_width="fill_parent" android:layout_height="fill_parent" android:listSelector="@android:color/transparent" android:drawSelectorOnTop="false" android:layout_weight="1.0" style="@style/TaskList_Seperator_Color" />
            <include android:id="@id/emptylayout_2" layout="@layout/task_empty_2" />
            <include android:id="@id/emptylayout" layout="@layout/task_empty" />
        </FrameLayout>
        <include android:id="@id/softkeyview" layout="@layout/softkeys" />
    </LinearLayout>
</LinearLayout>
