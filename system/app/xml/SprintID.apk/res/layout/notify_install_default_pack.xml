<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:id="@id/title" android:layout_width="fill_parent" android:layout_height="wrap_content" android:maxLines="1" style="@style/TextHeader" />
    <TextView android:id="@id/msg" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/title" style="@style/TextBody" />
    <TextView android:id="@id/sub_msg" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/msg" style="@style/TextBody" />
    <RelativeLayout android:id="@id/container" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="10.0dip" android:layout_below="@id/sub_msg">
        <ProgressBar android:id="@id/progress" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginBottom="10.0dip" style="@style/Progress" />
        <TextView android:gravity="center" android:id="@id/percent" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="2.0dip" />
        <Button android:id="@id/button" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/progress" android:layout_alignWithParentIfMissing="true" />
    </RelativeLayout>
</RelativeLayout>
