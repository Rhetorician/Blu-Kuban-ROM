<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NowPlayingTime">
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">@dimen/now_playing_time_width</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="PrimaryTitle" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/primary_text_color</item>
    </style>
    <style name="NowPlayingBarText.Primary" parent="@style/NowPlayingBarText">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>
    <style name="NowPlayingBarText.Secondary" parent="@style/NowPlayingBarText">
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
    </style>
</resources>
