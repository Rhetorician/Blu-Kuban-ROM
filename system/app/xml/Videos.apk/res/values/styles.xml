<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PlusOneButton">
        <item name="android:textSize">@dimen/plus_one_button_text_size</item>
        <item name="android:lines">@integer/plus_one_button_text_lines</item>
        <item name="progressBarOffsetTop">@dimen/plus_one_button_icon_container_padding_top</item>
        <item name="progressBarUseInverseStyle">@bool/plus_one_button_progress_bar_inverse</item>
        <item name="iconTextGap">@dimen/plus_one_button_icon_text_gap</item>
    </style>
    <style name="Widget.PagedGridView" parent="@android:style/Widget.GridView">
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:fadingEdge">vertical</item>
        <item name="android:listSelector">@color/full_transparent</item>
        <item name="android:cacheColorHint">@color/full_transparent</item>
    </style>
    <style name="Widget.PagedListView" parent="@android:style/Widget.ListView">
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:fadingEdge">vertical</item>
        <item name="android:listSelector">@color/full_transparent</item>
        <item name="android:cacheColorHint">@color/full_transparent</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">@dimen/video_grid_vertical_spacing</item>
    </style>
    <style name="FullHeightDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="Theme" parent="@android:style/Theme.Holo">
        <item name="android:windowBackground">@drawable/background</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:actionBarTabStyle">@style/ActionBarView_TabView</item>
    </style>
    <style name="ActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@null</item>
        <item name="android:divider">@null</item>
        <item name="android:title">@string/google_play</item>
        <item name="android:displayOptions">useLogo|showHome</item>
    </style>
    <style name="ActionBarView_TabView" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/action_bar_tab_drawable</item>
        <item name="android:paddingLeft">@dimen/action_bar_tab_padding</item>
        <item name="android:paddingRight">@dimen/action_bar_tab_padding</item>
    </style>
    <style name="VideoGridView" parent="@android:style/Widget.GridView">
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:fadingEdge">vertical</item>
        <item name="android:listSelector">@color/full_transparent</item>
        <item name="android:cacheColorHint">@color/full_transparent</item>
    </style>
    <style name="Metadata_Label" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/medium_font_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingRight">16.0dip</item>
        <item name="android:paddingBottom">1.0dip</item>
    </style>
    <style name="Metadata_Content" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/medium_font_size</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:paddingRight">16.0dip</item>
        <item name="android:paddingBottom">10.0dip</item>
    </style>
</resources>
