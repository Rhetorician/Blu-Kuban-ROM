<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LanguageSpinnerPositioning">
        <item name="android:layout_marginLeft">-3.0dip</item>
        <item name="android:layout_marginTop">@dimen/language_spinner_margin_top</item>
        <item name="android:layout_below">@id/top_divider</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>
    <style name="StartButtonPositioning">
        <item name="android:layout_marginTop">30.0dip</item>
        <item name="android:layout_marginRight">@dimen/title_indent</item>
        <item name="android:layout_alignTop">@id/change_language_spinner</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <style name="AndroidFramePositioning">
        <item name="android:layout_below">@id/start</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>
    <style name="AndroidPositioning">
        <item name="android:layout_marginLeft">@dimen/welcome_screen_android_margin_left</item>
        <item name="android:layout_marginBottom">@dimen/welcome_screen_android_margin_bottom</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>
    <style name="WelcomeImageLinearLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <style name="WelcomeImageLandscapeFrame">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0.0dip</item>
        <item name="android:layout_weight">2.0</item>
    </style>
    <style name="WelcomeImagePortraitFrame">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="WelcomeImageLandscape">
        <item name="android:visibility">visible</item>
    </style>
    <style name="WelcomeImagePortrait">
        <item name="android:visibility">gone</item>
    </style>
    <style name="MissingSimBackButton" parent="@style/Button">
        <item name="android:layout_above">@id/skip_button</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <style name="MissingSimSkipButton" parent="@style/Button">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>
</resources>
