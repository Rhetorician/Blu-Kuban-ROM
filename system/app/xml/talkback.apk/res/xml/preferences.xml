<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/title_pref_category_when_to_speak" android:key="@string/pref_category_when_to_speak_key">
        <ListPreference android:entries="@array/pref_speak_ringer_entries" android:title="@string/title_pref_speak_ringer" android:key="@string/pref_speak_ringer_key" android:summary="%s" android:defaultValue="@string/pref_speak_ringer_default" android:dialogTitle="@string/title_pref_speak_ringer" android:entryValues="@array/pref_speak_ringer_values" />
        <CheckBoxPreference android:title="@string/title_pref_speak_screenoff" android:key="@string/pref_screenoff_key" android:defaultValue="@bool/pref_screenoff_default" />
        <CheckBoxPreference android:title="@string/title_pref_caller_id" android:key="@string/pref_caller_id_key" android:defaultValue="@bool/pref_caller_id_default" />
        <CheckBoxPreference android:title="@string/title_pref_proximity" android:key="@string/pref_proximity_key" android:defaultValue="@bool/pref_proximity_default" android:summaryOn="@string/summaryOn_pref_proximity" android:summaryOff="@string/summaryOff_pref_proximity" />
        <CheckBoxPreference android:title="@string/title_pref_bluetooth" android:key="@string/pref_bluetooth_key" android:defaultValue="@bool/pref_bluetooth_default" android:summaryOn="@string/summaryOn_pref_bluetooth" android:summaryOff="@string/summaryOff_pref_bluetooth" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/title_pref_category_feedback_settings" android:key="@string/pref_category_feedback_key">
        <CheckBoxPreference android:title="@string/title_pref_vibration" android:key="@string/pref_vibration_key" android:defaultValue="@bool/pref_vibration_default" />
        <PreferenceScreen android:title="@string/title_pref_vibration_patterns" android:key="@string/pref_vibration_patterns_key" android:dependency="@string/pref_vibration_key">
            <com.google.android.marvin.talkback.PlayableListPreference android:entries="@array/pref_patterns_entries" android:title="@string/title_pref_patterns_hover" android:key="@string/pref_patterns_hover_key" android:summary="%s" android:defaultValue="@string/pref_patterns_hover_default" android:dialogTitle="@string/title_pref_patterns_hover" android:entryValues="@array/pref_patterns_values" />
            <com.google.android.marvin.talkback.PlayableListPreference android:entries="@array/pref_patterns_entries" android:title="@string/title_pref_patterns_actionable" android:key="@string/pref_patterns_actionable_key" android:summary="%s" android:defaultValue="@string/pref_patterns_actionable_default" android:dialogTitle="@string/title_pref_patterns_actionable" android:entryValues="@array/pref_patterns_values" />
        </PreferenceScreen>
        <CheckBoxPreference android:title="@string/title_pref_soundback" android:key="@string/pref_soundback_key" android:defaultValue="@bool/pref_soundback_default" />
        <ListPreference android:entries="@array/pref_soundback_volume_entries" android:title="@string/title_pref_soundback_volume" android:key="@string/pref_soundback_volume_key" android:summary="%s" android:dependency="@string/pref_soundback_key" android:defaultValue="@string/pref_soundback_volume_default" android:dialogTitle="@string/title_pref_soundback_volume" android:entryValues="@array/pref_soundback_volume_values" />
        <PreferenceScreen android:title="@string/title_pref_soundback_sounds" android:key="@string/pref_soundback_sounds_key" android:dependency="@string/pref_soundback_key">
            <com.google.android.marvin.talkback.PlayableListPreference android:entries="@array/pref_sounds_entries" android:title="@string/title_pref_sounds_hover" android:key="@string/pref_sounds_hover_key" android:summary="%s" android:defaultValue="@string/pref_sounds_hover_default" android:dialogTitle="@string/title_pref_sounds_hover" android:entryValues="@array/pref_sounds_values" />
            <com.google.android.marvin.talkback.PlayableListPreference android:entries="@array/pref_sounds_entries" android:title="@string/title_pref_sounds_actionable" android:key="@string/pref_sounds_actionable_key" android:summary="%s" android:defaultValue="@string/pref_sounds_actionable_default" android:dialogTitle="@string/title_pref_sounds_actionable" android:entryValues="@array/pref_sounds_values" />
        </PreferenceScreen>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/title_pref_category_developer_settings" android:key="@string/pref_category_developer_key">
        <ListPreference android:entries="@array/pref_log_level_entries" android:title="@string/title_pref_log_level" android:key="@string/pref_log_level_key" android:summary="%s" android:defaultValue="@string/pref_log_level_default" android:dialogTitle="@string/title_pref_log_level" android:entryValues="@array/pref_log_level_values" />
        <CheckBoxPreference android:title="@string/title_pref_developer_overlay" android:key="@string/pref_developer_overlay_key" android:summary="@string/summary_pref_developer_overlay" android:defaultValue="@bool/pref_developer_overlay_default" />
    </PreferenceCategory>
</PreferenceScreen>
