<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/notifications_preference_category" android:order="1000">
        <CheckBoxPreference android:title="@string/notifications_preference_enabled_title" android:key="@string/notifications_preference_enabled_key" android:summary="@string/notifications_preference_enabled_summary" android:defaultValue="@bool/notifications_preference_enabled_default_value" />
        <CheckBoxPreference android:title="@string/notifications_preference_vibrate_title" android:key="@string/notifications_preference_vibrate_key" android:summary="@string/notifications_preference_vibrate_summary" android:dependency="@string/notifications_preference_enabled_key" android:defaultValue="@bool/notifications_preference_vibrate_default_value" />
        <RingtonePreference android:title="@string/notifications_preference_ringtone_title" android:key="@string/notifications_preference_ringtone_key" android:summary="@string/notifications_preference_ringtone_summary" android:dependency="@string/notifications_preference_enabled_key" android:defaultValue="@string/notifications_preference_ringtone_default_value" android:ringtoneType="notification" />
        <PreferenceScreen android:title="@string/notification_settings_details_button">
            <intent android:targetPackage="com.google.android.apps.plus" android:targetClass="com.google.android.apps.plus.phone.NotificationSettingsActivity" />
        </PreferenceScreen>
    </PreferenceCategory>
</PreferenceScreen>
