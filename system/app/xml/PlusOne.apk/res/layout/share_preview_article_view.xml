<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@id/share_preview" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="horizontal" android:id="@id/share_icon_text" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <com.google.android.apps.plus.views.EsImageView android:id="@id/article_icon" android:layout_width="@dimen/fav_icon_size" android:layout_height="@dimen/fav_icon_size" android:layout_marginTop="@dimen/article_icon_margin" android:layout_marginRight="@dimen/article_icon_marginRight" android:layout_marginBottom="@dimen/article_icon_margin" android:src="@drawable/album_border" />
        <TextView android:textSize="@dimen/stream_content_text_size" android:textStyle="bold" android:textColor="@color/stream_link_color" android:id="@id/article_title" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/article_title_margin" />
    </LinearLayout>
    <com.google.android.apps.plus.views.EsImageView android:id="@id/article_image" android:layout_width="@dimen/stream_image_small_dimension" android:layout_height="@dimen/stream_image_small_dimension" android:layout_marginTop="@dimen/article_image_marginTop" android:layout_marginRight="@dimen/article_image_marginRight" android:src="@drawable/album_border" android:layout_below="@id/share_icon_text" android:layout_alignLeft="@id/share_icon_text" />
    <TextView android:textSize="@dimen/stream_content_text_size" android:textColor="@color/share_content" android:id="@id/article_content" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_toRightOf="@id/article_image" android:layout_below="@id/share_icon_text" />
</RelativeLayout>
