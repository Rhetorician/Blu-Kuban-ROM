<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent" android:fillViewport="true"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1.0">
        <TextView android:text="@string/account_setup_incoming_username_label" style="@style/accountSetupEditFieldTextStyle" />
        <EditText android:enabled="false" android:id="@id/account_username" android:focusable="false" android:hint="@string/account_setup_basics_email_hint" android:maxLength="320" android:inputType="textEmailAddress" android:imeOptions="actionNext|flagNoFullscreen" style="@style/accountSetupEditFieldStyle" />
        <TextView android:text="@string/account_setup_incoming_password_label" style="@style/accountSetupEditFieldTextStyle" />
        <EditText android:id="@id/account_password" android:hint="@string/account_setup_basics_password_hint" android:maxLength="320" android:inputType="textPassword" android:imeOptions="actionDone|flagNoFullscreen" style="@style/accountSetupEditFieldStyle" />
        <View android:layout_width="fill_parent" android:layout_height="0.0dip" android:layout_weight="1.0" />
        <LinearLayout style="@style/accountSetupSoftButtonLayoutStyle">
            <Button android:id="@id/cancel" android:text="@string/cancel_action" style="@style/accountSetupSoftButton2Style" />
            <Button android:id="@id/done" android:text="@string/done_action" style="@style/accountSetupSoftButton2Style" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
