<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme" parent="@android:style/Theme.Light" />
    <style name="Theme.TransparentTest" parent="@style/Theme">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="Animations" />
    <style name="Animations.PopDownMenu" parent="@style/Animations" />
    <style name="Animations.PopDownMenu.Center" parent="@style/Animations.PopDownMenu">
        <item name="android:windowEnterAnimation">@anim/grow_from_top</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_bottom</item>
    </style>
    <style name="Animations.PopUpMenu" parent="@style/Animations" />
    <style name="Animations.PopUpMenu.Center" parent="@style/Animations.PopUpMenu">
        <item name="android:windowEnterAnimation">@anim/grow_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_top</item>
    </style>
    <style name="Animations.PopUpMenu.BottomTop" parent="@style/Animations.PopUpMenu">
        <item name="android:windowEnterAnimation">@anim/bottom_to_top</item>
        <item name="android:windowExitAnimation">@anim/top_to_bottom</item>
    </style>
    <style name="SelectedViewText">
        <item name="android:textSize">21.0px</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="NormalViewText">
        <item name="android:textSize">21.0px</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#7fffffff</item>
    </style>
    <style name="progress_Seekbar">
        <item name="android:maxHeight">26.0px</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/videoplayer_progressbar</item>
        <item name="android:minHeight">26.0px</item>
        <item name="android:thumb">@drawable/seek_thumb</item>
        <item name="android:thumbOffset">0.0px</item>
    </style>
</resources>
