<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:key="location_reporting">
        <ListPreference android:key="reporting_type" />
        <CheckBoxPreference android:key="enable_reporting" />
    </PreferenceCategory>
    <PreferenceCategory android:key="location_sharing">
        <Preference android:key="loading_location_sharing" />
        <CheckBoxPreference android:key="enable_location_sharing" />
        <Preference android:key="manage_location_sharing" />
    </PreferenceCategory>
    <PreferenceCategory android:key="location_history">
        <Preference android:key="loading_location_history" />
        <CheckBoxPreference android:key="enable_location_history" />
    </PreferenceCategory>
    <PreferenceCategory android:key="checkins">
        <Preference android:key="loading_checkins" />
        <CheckBoxPreference android:key="automatic_checkins" />
        <CheckBoxPreference android:key="checkin_notifications" />
        <CheckBoxPreference android:key="rating_reminders" />
        <Preference android:key="manage_places" />
    </PreferenceCategory>
</PreferenceScreen>
