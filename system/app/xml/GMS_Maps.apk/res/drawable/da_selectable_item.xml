<?xml version="1.0" encoding="utf-8"?>
<selector android:exitFadeDuration="@android:integer/config_mediumAnimTime"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" android:state_pressed="true">
        <transition>
            <item android:drawable="@drawable/list_pressed" />
            <item android:drawable="@drawable/list_longpressed" />
        </transition>
    </item>
    <item android:state_focused="false" android:state_pressed="true" android:drawable="@drawable/list_pressed">
        <transition>
            <item android:drawable="@drawable/list_pressed" />
            <item android:drawable="@drawable/list_longpressed" />
        </transition>
    </item>
    <item android:state_focused="true" android:drawable="@drawable/list_focused" />
    <item android:drawable="@android:color/transparent" />
</selector>
